<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#651FFF">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:background="#76FF03"
        android:layout_margin="8dp"
        android:id="@+id/backButton"
        android:onClick="goToAbs"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Planks"
        android:textSize="24dp"
        android:id="@+id/planksPage"
        android:layout_toRightOf="@id/backButton"
        android:paddingTop="16dp"/>
    <Button
        android:id="@+id/forearm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/backButton"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:paddingTop="13dp"
        android:text="Forearm Planks"
        android:textSize="16dp"
        android:gravity="left"
        android:onClick="goToForearm"/>
    <Button
        android:id="@+id/hand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/forearm"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:paddingTop="13dp"
        android:text="Hand Planks"
        android:textSize="16dp"
        android:gravity="left"
        android:onClick="goToHand"/>
    <Button
        android:id="@+id/side"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hand"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:paddingTop="13dp"
        android:text="Side Planks"
        android:textSize="16dp"
        android:gravity="left"
        android:onClick="goToSide"/>

</RelativeLayout>