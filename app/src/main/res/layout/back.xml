<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#651FFF">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:background="#76FF03"
        android:layout_margin="8dp"
        android:id="@+id/backButton"
        android:onClick="goToWorkouts"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textSize="24dp"
        android:id="@+id/backPage"
        android:layout_toRightOf="@id/backButton"
        android:paddingTop="16dp"/>
    <Button
        android:id="@+id/jumpingJacks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/backButton"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:paddingTop="13dp"
        android:text="Jumping Jacks"
        android:textSize="16dp"
        android:gravity="left"
        android:onClick="goToJumpingJacks"/>
    <Button
        android:id="@+id/sealJacks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/jumpingJacks"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:paddingTop="13dp"
        android:text="Seal Jacks"
        android:textSize="16dp"
        android:gravity="left"
        android:onClick="goToSealJacks"/>
    <Button
        android:id="@+id/scissorJacks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sealJacks"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:paddingTop="13dp"
        android:text="Scissor Jacks"
        android:textSize="16dp"
        android:gravity="left"
        android:onClick="goToScissorJacks"/>
    <Button
        android:id="@+id/russianTwists"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scissorJacks"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:paddingTop="13dp"
        android:text="Russian Twists"
        android:textSize="16dp"
        android:gravity="left"
        android:onClick="goToRussia"/>
    <Button
        android:id="@+id/supermans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/russianTwists"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:paddingTop="13dp"
        android:text="Supermans"
        android:textSize="16dp"
        android:gravity="left"
        android:onClick="goToSupermans"/>
    <Button
        android:id="@+id/advancedReach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/supermans"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:paddingTop="13dp"
        android:text="Advanced Reach"
        android:textSize="16dp"
        android:gravity="left"
        android:onClick="goToAdvancedReach"/>
    <Button
        android:id="@+id/hyperExtensions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/advancedReach"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:paddingTop="13dp"
        android:text="Hyper Extensions"
        android:textSize="16dp"
        android:gravity="left"
        android:onClick="goToHyperExtension"/>
</RelativeLayout>